{
  "oauth": {
    "client_id": "Your Client Id",
    "client_secret": "Your Client Secret",
    "redirect_uri": "http://localhost:8888/callback",
    "scopes": [
      "ZohoBigin.modules.ALL",
      "ZohoBigin.settings.ALL",
      "ZohoBigin.org.READ"
    ],
    "access_type": "offline",
    "response_type": "code",
    "accounts_url_template": "https://accounts.zoho.{dc}",
    "default_dc": "com"
  },
  "token_storage": {
    "path": "~/.openclaw/credentials/bigin-crm.json",
    "format": "json"
  },
  "data_centers": {
    "com": {
      "name": "United States",
      "accounts_url": "https://accounts.zoho.com",
      "api_url": "https://www.zohoapis.com"
    },
    "eu": {
      "name": "Europe",
      "accounts_url": "https://accounts.zoho.eu",
      "api_url": "https://www.zohoapis.eu"
    },
    "in": {
      "name": "India",
      "accounts_url": "https://accounts.zoho.in",
      "api_url": "https://www.zohoapis.in"
    },
    "au": {
      "name": "Australia",
      "accounts_url": "https://accounts.zoho.com.au",
      "api_url": "https://www.zohoapis.com.au"
    },
    "jp": {
      "name": "Japan",
      "accounts_url": "https://accounts.zoho.jp",
      "api_url": "https://www.zohoapis.jp"
    },
    "uk": {
      "name": "United Kingdom",
      "accounts_url": "https://accounts.zoho.uk",
      "api_url": "https://www.zohoapis.uk"
    },
    "ca": {
